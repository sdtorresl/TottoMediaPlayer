<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox stylesheets="@res/css/main.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="exeamediaplayer.MainController">
   <children>
      <HBox alignment="CENTER" prefWidth="550.0" styleClass="bar">
         <children>
            <MenuBar nodeOrientation="LEFT_TO_RIGHT" prefWidth="250.0">
              <menus>
                <Menu mnemonicParsing="false" text="%file">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#close" text="%close" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="%edit">
                  <items>
                    <MenuItem mnemonicParsing="false" text="Delete" />
                  </items>
                </Menu>
                <Menu mnemonicParsing="false" text="%help">
                  <items>
                    <MenuItem mnemonicParsing="false" text="About" />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <HBox alignment="CENTER_RIGHT" prefWidth="300.0">
               <children>
                  <Label fx:id="welcomeLabel" styleClass="bar" text="%welcome" />
                <Button mnemonicParsing="false" onAction="#logout" styleClass="bar" text="%logout" textAlignment="CENTER" wrapText="true">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin></Button>
               </children>
            </HBox>
         </children>
      </HBox>
      <TabPane prefHeight="200.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab id="tab-title" text="%online">
               <content>
                  <HBox alignment="CENTER" styleClass="player-container">
                     <children>
                        <Button mnemonicParsing="false" text="Button" />
                     </children>
                  </HBox>
               </content>
          </Tab>
          <Tab text="%offline">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="150.0" />
            </content>
          </Tab>
        </tabs>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </TabPane>
   </children>
</VBox>
